<boards>
  <!--
     Firmware for the RepRap Motherboard v1.1 and v1.2.
    -->
  <board name="RepRap Motherboard v1.X">
    <version major="1" minor="1"/>
    <version major="1" minor="2"/>
    <programmer class="replicatorg.uploader.AvrdudeUploader">
      <protocol>stk500v1</protocol>
      <speed>38400</speed>
      <arch>m644p</arch>
      <manualreset>true</manualreset>
    </programmer>
    <firmware
       name="v1.6"
       major="1"
       minor="6"
       relpath="firmware/SanguinoMaster-v1.6.hex"/>
    <firmware
       major="1"
       minor="5"
       relpath="firmware/SanguinoMaster-v1.5.hex"/>
    <firmware
       major="1"
       minor="4"
       relpath="firmware/SanguinoMaster-v1.4.hex"/>
    <firmware
       major="0"
       minor="0"
       relpath="firmware/MB-rrmbv12-v2.0.hex"
       name="v2.0 BETA"
       status="beta"
       description="This is the beta release of the v2.0 firmware."
       />
  </board>
  <board name="Extruder Controller v2.2">
    <version major="2" minor="2"/>
    <programmer class="replicatorg.uploader.AvrdudeUploader">
      <protocol>stk500v1</protocol>
      <speed>19200</speed>
      <arch>m168</arch>
    </programmer>
    <firmware
       major="1"
       minor="8"
       relpath="firmware/ArduinoSlaveExtruder-v1.8.hex"/>
    <firmware
       name="v1.8 with heated platform support"
       major="1"
       minor="8"
       relpath="firmware/ArduinoSlaveExtruder-v1.8.heated-platform.hex"/>
    <firmware
       major="1"
       minor="6"
       relpath="firmware/ArduinoSlaveExtruder-v1.6.hex"/>
    <firmware
       major="1"
       minor="5"
       relpath="firmware/ArduinoSlaveExtruder-v1.5.hex"/>
    <firmware
       major="1"
       minor="4"
       relpath="firmware/ArduinoSlaveExtruder-v1.4.hex"/>
    <firmware
       major="0"
       minor="0"
       relpath="firmware/EC-ecv22-v2.0.hex"
       name="v2.0 BETA"
       status="beta"
       description="This is the beta release of the v2.0 firmware."
       />
  </board>
</boards>
